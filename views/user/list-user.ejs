<%- include('../partial/head.ejs') %>
<%- include('../partial/header.ejs') %>
<div class="container">

        <h1>Users List</h1>

        
        <table class="table">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Role</th>
                    <th colspan="2">Action</th>
                </tr>
            </thead>
            <% let no=1 %>
            <% users.forEach(dataUser => { %>
                <tr>
                    <td><%= no++ %></td>
                    <td><%= dataUser.first_name %></td>
                    <td><%= dataUser.last_name %></td>
                    <td><%= dataUser.username %></td>
                    <td><%= dataUser.email%></td>
                    <td><%= dataUser.gender %></td>
                    <td><%= dataUser.role %></td>
                    <td><a class="btn btn-warning" href="/users/edit-user/<%= dataUser.id %>">Edit</a></td>
                    <td><a class="btn btn-danger" href="/users/del-user/<%= dataUser.id %>" onclick="return confirm('delete this User ?');">Delete</a></td>
                </tr>
            <% }) %>
    </table>
    </div>
</div>

<%- include('../partial/footer.ejs') %>